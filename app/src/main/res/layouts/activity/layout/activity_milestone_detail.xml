<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MilestoneDetail">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/tabPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabAbility"
        android:layout_width="match_parent"
        android:layout_height="@dimen/milestoneDetail_tab_Height"
        android:layout_marginHorizontal="@dimen/_50sdp"
        android:background="@drawable/tab_layout_background"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:tabGravity="fill"
        app:tabIndicator="@drawable/tab_indicator_background"
        app:tabIndicatorColor="@null"
        app:tabIndicatorHeight="@dimen/milestoneDetail_tab_Height"
        app:tabMode="fixed"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="@color/lightBlue_400"
        app:tabTextAppearance="@style/milestoneDetail_tabTextAppearance"
        app:tabTextColor="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blueGrey_600"
        android:text="@string/back_home"
        app:cornerRadius="@dimen/_50sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"/>

</androidx.constraintlayout.widget.ConstraintLayout>