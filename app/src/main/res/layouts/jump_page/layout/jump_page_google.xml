<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rectangle_gradient_cyan"
    tools:context=".Authentication.AuthGoogle">

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spinKitView"
        style="@style/SpinKitView.Large.CubeGrid"
        android:layout_width="@dimen/jump_page_SpinKitSize"
        android:layout_height="@dimen/jump_page_SpinKitSize"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/jump_page_SpinKitPadding"
        app:layout_constraintVertical_bias="@dimen/jump_page_SpinKitVerticalBias"/>

    <TextView
        android:textAppearance="@style/jump_page_textAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jump_page_title"
        android:textSize="@dimen/jump_page_textSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>