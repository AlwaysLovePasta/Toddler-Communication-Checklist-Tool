<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="@dimen/_7sdp"
    android:paddingHorizontal="@dimen/_10sdp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/toddlerImg"
        android:layout_width="@dimen/rv_toddler_imageView_size"
        android:layout_height="@dimen/rv_toddler_imageView_size"
        app:shapeAppearanceOverlay="@style/Circle"
        app:strokeColor="?attr/colorSecondary"
        app:strokeWidth="@dimen/_2sdp"
        android:padding="@dimen/_5sdp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/toddlerName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/rv_toddler_name_textSize"
        android:gravity="center"
        android:layout_marginStart="@dimen/rv_toddler_name_ms"/>

</LinearLayout>