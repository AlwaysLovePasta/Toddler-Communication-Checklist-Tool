<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/optionGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/step_optionMarginHorizontal"
    android:layout_marginVertical="@dimen/step_optionMarginVertical"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RadioButton
        android:id="@+id/optionDad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/relationship_mh"
        android:layout_marginVertical="@dimen/relationship_mv"
        android:background="@drawable/btn_radio_state"
        android:button="@null"
        android:elevation="@dimen/relationship_elevation"
        android:gravity="center"
        android:text="@string/dad"
        android:textColor="@drawable/btn_text_state"
        android:textSize="@dimen/relationship_textSize"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/optionMom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/relationship_mh"
        android:layout_marginVertical="@dimen/relationship_mv"
        android:background="@drawable/btn_radio_state"
        android:button="@null"
        android:elevation="@dimen/relationship_elevation"
        android:gravity="center"
        android:text="@string/mom"
        android:textColor="@drawable/btn_text_state"
        android:textSize="@dimen/relationship_textSize"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/optionGrandpa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/relationship_mh"
        android:layout_marginVertical="@dimen/relationship_mv"
        android:background="@drawable/btn_radio_state"
        android:button="@null"
        android:elevation="@dimen/relationship_elevation"
        android:gravity="center"
        android:text="@string/grandpa"
        android:textColor="@drawable/btn_text_state"
        android:textSize="@dimen/relationship_textSize"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/optionGrandma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/relationship_mh"
        android:layout_marginVertical="@dimen/relationship_mv"
        android:background="@drawable/btn_radio_state"
        android:button="@null"
        android:elevation="@dimen/relationship_elevation"
        android:gravity="center"
        android:text="@string/grandma"
        android:textColor="@drawable/btn_text_state"
        android:textSize="@dimen/relationship_textSize"
        android:textStyle="bold" />

</RadioGroup>