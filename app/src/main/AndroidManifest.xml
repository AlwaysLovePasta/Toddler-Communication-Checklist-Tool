<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.TCCT">
    <!-- Allows applications to access information about networks. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App"
        tools:ignore="AllowBackup"
        tools:replace="android:allowBackup">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".Activities.Reference"
            android:exported="true" />
        <activity
            android:name=".Activities.Glossary"
            android:exported="true" />
        <activity
            android:name=".Activities.AppIntroduce"
            android:exported="true"
            android:theme="@style/appIntroduce" />
        <activity
            android:name=".Activities.MilestoneDetail"
            android:exported="true" />
        <activity
            android:name=".Activities.MonthMenu"
            android:exported="true" />
        <activity
            android:name=".Activities.Checklist"
            android:exported="true" />
        <activity
            android:name=".Activities.AddToddler"
            android:exported="true" />
        <activity
            android:name=".Activities.EditToddler"
            android:exported="true" />
        <activity
            android:name=".Activities.Feedback"
            android:exported="true" />
        <activity
            android:name=".Activities.About"
            android:exported="true"
            android:theme="@style/about" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true"
            android:theme="@style/main" />
        <activity
            android:name=".Authentication.AuthFacebook"
            android:theme="@style/login" />
        <activity
            android:name=".Authentication.AuthGoogle"
            android:theme="@style/login" />
        <activity
            android:name=".Authentication.AuthDefault"
            android:theme="@style/login" />
        <activity
            android:name=".Activities.Login"
            android:exported="true"
            android:theme="@style/login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>